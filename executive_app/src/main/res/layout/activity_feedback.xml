<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lnbinfotech.msplfootwear.FeedbackActivity">

    <ScrollView
        android:id="@+id/scroll_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5sp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/feedbacktype" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:background="@drawable/border_draw_profile"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/feedback_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/feedback_spinner_height50" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/packing_order_inv_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2sp"
                android:background="@drawable/border_draw_profile"
                android:orientation="vertical"
                android:padding="5sp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/lay_invType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rdo_gp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Goods_Packing - Packing Not Proper" />

                    <RadioButton
                        android:id="@+id/rdo_wgr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wrong_Goods_Received - Wrong goods received as per order placed" />

                    <RadioButton
                        android:id="@+id/rdo_sgr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Short_Goods_Received - Invoice Made But Goods Not Received" />

                    <RadioButton
                        android:id="@+id/rdo_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goods_Delivery" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2sp"
                    android:background="@drawable/border_draw_profile"
                    android:orientation="vertical"
                    android:padding="5sp"
                    android:visibility="visible">

                    <AutoCompleteTextView
                        android:id="@+id/auto_invOrderNo"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/feedback_auto_height30"
                        android:background="@null"
                        android:hint="@string/entertexthere"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/damaged_goods_cardlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/damaged_goods_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:background="@drawable/border_draw_profile"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:paddingLeft="4dp"
                            android:text="@string/article_no" />

                        <AutoCompleteTextView
                            android:id="@+id/auto_article_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:hint="Select Article Number"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/mobmargin2">

                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Size Group" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_weight="0.4"
                            android:background="@drawable/sizegroup_spinner_draw"
                            android:orientation="vertical"
                            android:padding="@dimen/mobpadding2">

                            <Spinner
                                android:id="@+id/sp_sizegroup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:spinnerMode="dropdown"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/mobmargin2">

                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Colour" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_weight="0.4"
                            android:background="@drawable/sizegroup_spinner_draw"
                            android:orientation="vertical"
                            android:padding="@dimen/mobpadding2">

                            <Spinner
                                android:id="@+id/sp_color"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:spinnerMode="dropdown"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:paddingLeft="4dp"
                            android:text="@string/invoice_no" />

                        <AutoCompleteTextView
                            android:id="@+id/auto_invoice_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:hint="First Select SizeGroup and Color"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:paddingLeft="4dp"
                            android:text="@string/_qty" />

                        <EditText
                            android:id="@+id/ed_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:hint="Enter Qty"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/service_or_team_cardlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/service_or_team_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:background="@drawable/border_draw_profile"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_salesman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/salesman" />

                        <RadioButton
                            android:id="@+id/rdo_office"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/frontoffice" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:paddingLeft="4dp"
                            android:text="@string/salesman"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/ed_salesman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:clickable="false"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Enter Salesman Name"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:paddingLeft="4dp"
                            android:text="@string/frontoffice"
                            android:visibility="gone" />

                        <AutoCompleteTextView
                            android:id="@+id/auto_staff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:hint="Select Employee Name"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description" />

            <LinearLayout
                android:id="@+id/lay_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/ed_description"
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_draw_profile"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="@string/enterdescription"
                    android:inputType="textCapSentences|textMultiLine"
                    android:lines="5"
                    android:padding="5sp"
                    android:paddingLeft="4dp"
                    android:visibility="visible" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgv_camera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.90"
                            app:srcCompat="@drawable/ic_photo_camera" />

                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.10"
                            android:text="@string/attach_image" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lay_img1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/mobmargin5"
                            android:layout_weight="0.05"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="@dimen/feedback_lay_height100"
                                android:layout_height="@dimen/feedback_lay_height100"
                                android:layout_gravity="center"
                                android:background="@drawable/black_border_draw"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgv_img1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    app:srcCompat="@drawable/ic_photo_camera" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_img2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/mobmargin5"
                            android:layout_weight="0.05"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <LinearLayout
                                android:layout_width="@dimen/feedback_lay_height100"
                                android:layout_height="@dimen/feedback_lay_height100"
                                android:layout_gravity="center"
                                android:background="@drawable/black_border_draw"
                                android:gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/imgv_img2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    app:srcCompat="@drawable/ic_photo_camera" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_img3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/mobmargin5"
                            android:layout_weight="0.05"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:background="@drawable/black_border_draw"
                                android:gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/imgv_img3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    app:srcCompat="@drawable/ic_photo_camera" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <!-- <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/attach_img_lay">

                         <ImageView
                             android:background="@drawable/border_draw_profile"
                             android:layout_width="100dp"
                             android:layout_height="100dp"
                             android:id="@+id/imgv_img1"
                             android:layout_weight="0.3"
                             android:src="@drawable/camera"
                             android:visibility="visible" />
                         <ImageView
                             android:background="@drawable/border_draw_profile"
                             android:layout_width="100dp"
                             android:layout_height="100dp"
                             android:id="@+id/imgv_img2"
                             android:layout_weight="0.3"
                             android:src="@drawable/camera"
                             android:visibility="visible" />
                         <ImageView
                             android:background="@drawable/border_draw_profile"
                             android:layout_width="100dp"
                             android:layout_height="100dp"
                             android:id="@+id/imgv_img3"
                             android:layout_weight="0.3"
                             android:src="@drawable/camera"
                             android:visibility="visible" />

                     </LinearLayout>-->
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bt_send"
                style="@style/textViewMob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_sent_mail"
                android:text="@string/sendfed"
                android:textColor="@color/white"
                app:backgroundTint="@color/red" />
        </LinearLayout>
    </ScrollView>

    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
