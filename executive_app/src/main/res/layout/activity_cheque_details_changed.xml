<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.lnbinfotech.msplfootwearex.ChequeDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mobmargin5">

            <EditText
                android:id="@+id/ed_bank"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/search"
                android:focusable="false"
                android:hint="@string/selectbank"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mobmargin5">

            <EditText
                android:id="@+id/ed_branch"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/search"
                android:focusable="false"
                android:hint="@string/selectbranch"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/mobmargin2"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:text="@string/noofcheque"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

            <EditText
                android:id="@+id/ed_total_chq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:drawableRight="@drawable/cheque_number"
                android:ems="10"
                android:inputType="number"
                android:padding="5sp"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textViewMobAddToCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/line_left_top_right_bottom_draw"
                android:gravity="center"
                android:text="SrNo" />

            <TextView
                style="@style/textViewMobAddToCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/line_top_right_bottom_draw"
                android:gravity="center"
                android:text="Cheque Date" />

            <TextView
                style="@style/textViewMobAddToCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/line_top_right_bottom_draw"
                android:gravity="center"
                android:text="Cheque No" />

            <TextView
                style="@style/textViewMobAddToCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/line_top_right_bottom_draw"
                android:gravity="center"
                android:text="Amount" />

            <TextView
                style="@style/textViewMobAddToCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/line_top_right_bottom_draw"
                android:gravity="center"
                android:text="Image"
                android:visibility="visible" />

            <TextView
                style="@style/textViewMobAddToCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/line_top_right_bottom_draw"
                android:gravity="center"
                android:text="Mar.Down"
                android:visibility="gone" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/listView"
            android:layout_weight="1"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_submt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/save_button_back"
            android:text="@string/submit"
            android:textColor="@color/white"
            app:backgroundTint="@color/maroon"/>

    </LinearLayout>

    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
