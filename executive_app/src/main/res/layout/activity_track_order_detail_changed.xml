<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vieworder_layheight"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/mobpadding5"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_creaditlimit"
            style="@style/textViewMob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="Credit Limit.."
            android:textColor="@color/greend" />

        <ImageView
            android:id="@+id/imgv_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:src="@drawable/infog_32" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/textViewMob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:text="Qty"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dispatchcenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:divider="@null"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:reverseLayout="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_custname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/textViewMob"/>
    <TextView
        android:id="@+id/tv_orderStatus"
        style="@style/textViewMob"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trackorderc_detail_layheight30"
        android:text="Order Status"
        android:textColor="@color/black"
        android:gravity="left|center" />

    <TextView
        android:id="@+id/tv_invoiceno"
        style="@style/textViewMob"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trackorderc_detail_layheight30"
        android:text="Invoice Number"
        android:textColor="@color/black"
        android:gravity="left|center" />

    <TextView
        android:id="@+id/tv_trasporter"
        style="@style/textViewMob"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trackorderc_detail_layheight30"
        android:text="Transporter"
        android:textColor="@color/black"
        android:gravity="left|center" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/trackorderc_detail_layheight30"
                android:background="@color/red"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_left_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="Credit App."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="Alloted To Pckg"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="TaxInvMade"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="InvAmnt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_creditapp"
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_left_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_alltopckg"
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_tavinvmade"
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:id="@+id/tv_invamnt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/trackorderc_detail_layheight30"
                android:background="@color/red"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_left_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="TSET"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="TotOrdQty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="TotInvQty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="TotCanQty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_tot_set"
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_left_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tot_ord_qty"
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:id="@+id/tv_tot_inv_qty" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:id="@+id/tv_tot_can_qty" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_left_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/prod"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/sizeg"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth80"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/color"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth80"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="OrderQty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth80"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="InvQty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth80"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="CancelQty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/wsp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/mr"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/amt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth40"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/gst"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_vOrder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/trackorderc_detail_layheight30"
                android:background="@color/red"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_left_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/totalno"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/totalqty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth80"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/grossamt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth50"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/discper"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth70"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/discamt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth70"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/gstamt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth80"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_top_right_bottom_draw"
                    android:gravity="center"
                    android:text="@string/netamt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView

                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_left_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:visibility="visible" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth60"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_gross_amt"
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth80"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_disc_per"
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth50"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_disc_amt"
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorder_detail_tvwidth70"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_gst_amt"
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth70"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_amt"
                    style="@style/textViewMob"
                    android:layout_width="@dimen/trackorderc_detail_tvwidth80"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_right_bottom_draw"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/mobmargin2"
        android:text="Proceed To Checkout"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@color/maroon" />

    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>