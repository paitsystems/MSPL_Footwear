<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/mobmargin5"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/textViewMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectidproof"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mobmargin5"
            android:background="@drawable/border_draw_profile"
            android:visibility="visible">

            <Spinner
                android:id="@+id/spinner_idproof"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            style="@style/textViewMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idproofimage"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mobmargin5"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_weight="0.05">


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/black_border_draw"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_idproof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/save_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mobmargin5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_chevron_right_black_24dp"
            android:text="@string/next"
            android:textColor="@color/white"
            app:backgroundTint="@color/buttoncolor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mobmargin5"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mobmargin5"
            android:layout_weight="0.2"
            android:drawableLeft="@drawable/ic_autorenew_black_24dp1"
            android:text="@string/update"
            android:textColor="@color/white"
            app:backgroundTint="@color/buttoncolor" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mobmargin5"
            android:layout_weight="0.2"
            android:drawableLeft="@drawable/ic_cancel_black_24dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            app:backgroundTint="@color/buttoncolor" />
    </LinearLayout>
    </LinearLayout>
    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>