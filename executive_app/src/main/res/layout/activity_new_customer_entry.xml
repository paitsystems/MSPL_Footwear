<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.lnbinfotech.msplfootwearex.NewCustomerEntryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/mobmargin5"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mobmargin5"
            android:layout_marginTop="@dimen/mobmargin5"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp">

                <EditText
                    android:id="@+id/ed_cus_name"
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/enetrcustomername"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp">

                <EditText
                    android:id="@+id/ed_shop_name"
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/enetrshopname"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp">

                <EditText
                    android:id="@+id/ed_mobile_no"
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/mobile_no"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp">

                <EditText
                    android:id="@+id/ed_emailid"
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/email_id"
                    android:inputType="textWebEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp">

                <EditText
                    android:id="@+id/ed_address"
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_room_black_24dp"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="@string/address"
                    android:inputType="textCapSentences"
                    android:lines="2"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/save_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin5"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/buttoncolor"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin5"
                android:orientation="horizontal"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:drawableLeft="@drawable/ic_autorenew_black_24dp1"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/buttoncolor"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:drawableLeft="@drawable/ic_cancel_black_24dp"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/buttoncolor"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
