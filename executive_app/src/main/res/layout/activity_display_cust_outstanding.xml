<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="@dimen/mobmargin5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

    <LinearLayout
        android:layout_margin="@dimen/mobmargin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/textview_back"
        android:padding="@dimen/mobpadding5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/greend"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/play16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

            <TextView
                android:textColor="@color/white"
                android:padding="@dimen/mobpadding5"
                android:background="@color/greend"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Credit Limit"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center"
                    style="@style/textViewMob"
                    android:id="@+id/tv_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/greend"
                    android:text="456"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@color/greend"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/play16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8" />

                <TextView
                    android:textColor="@color/white"
                    android:padding="@dimen/mobpadding5"
                    android:background="@color/greend"
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Days"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>

                <TextView
                    android:gravity="center"
                    style="@style/textViewMob"
                    android:id="@+id/tv_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text=""
                    android:textColor="@color/greend"
                    android:layout_gravity="center" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/greend"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/play16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

            <TextView
                android:textColor="@color/white"
                android:padding="@dimen/mobpadding5"
                android:background="@color/greend"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Current Outstanding"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            <TextView
                android:padding="@dimen/mobpadding5"
                style="@style/textViewMob"
                android:id="@+id/tv_co"
                android:textColor="@color/greend"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="456" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/greend"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/play16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

            <TextView
                android:textColor="@color/white"
                android:padding="@dimen/mobpadding5"
                android:background="@color/greend"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Post Dated Cheque"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            <TextView
                android:textColor="@color/greend"
                android:gravity="center"
                android:padding="@dimen/mobpadding5"
                style="@style/textViewMob"
                android:id="@+id/tv_pdc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/greend"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/play16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

            <TextView
                android:textColor="@color/white"
                android:padding="@dimen/mobpadding5"
                android:background="@color/greend"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Balance For Payment"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            <TextView
                android:textColor="@color/greend"
                android:gravity="center"
                android:padding="@dimen/mobpadding5"
                style="@style/textViewMob"
                android:id="@+id/tv_bfp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/greend"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/play16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

            <TextView
                android:textColor="@color/white"
                android:padding="@dimen/mobpadding5"
                android:background="@color/greend"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Over Due Amount"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            <TextView
                android:textColor="@color/greend"
                android:gravity="center"
                android:padding="@dimen/mobpadding5"
                style="@style/textViewMob"
                android:id="@+id/tv_oda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/greend"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/play16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

            <TextView
                android:textColor="@color/white"
                android:padding="@dimen/mobpadding5"
                android:background="@color/greend"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Current Order"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            <TextView
                android:textColor="@color/greend"
                android:gravity="center"
                android:padding="@dimen/mobpadding5"
                style="@style/textViewMob"
                android:id="@+id/tv_corder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Unavailable Order"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/greend" />

            <TextView
                android:textColor="@color/greend"
                android:gravity="center"
                android:padding="@dimen/mobpadding5"
                style="@style/textViewMob"
                android:id="@+id/tv_uo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Small Text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Net Order Available"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/greend" />

            <TextView
                android:textColor="@color/greend"
                android:gravity="center"
                style="@style/textViewMob"
                android:id="@+id/tv_noa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Small Text" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/greend"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/play16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

            <TextView
                android:textColor="@color/white"
                android:padding="@dimen/mobpadding5"
                android:background="@color/greend"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Over Limit"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            <TextView
                android:textColor="@color/greend"
                android:gravity="center"
                android:padding="@dimen/mobpadding5"
                style="@style/textViewMob"
                android:id="@+id/tv_ol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>