<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/mobmargin5"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black_border_draw1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/list_item_stockinfo_width80"
                android:layout_height="@dimen/list_item_stockinfo_height20"
                android:gravity="center"
                android:padding="@dimen/mobpadding2"
                android:text="10X10-Y"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>