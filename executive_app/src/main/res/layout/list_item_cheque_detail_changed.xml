<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_srno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/line_left_right_bottom_draw"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_cqdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@drawable/line_right_bottom_draw"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/ed_cqno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/line_right_bottom_draw"
            android:gravity="center"
            android:text="0"
            android:selectAllOnFocus="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"/>

        <EditText
            android:id="@+id/ed_amnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/line_right_bottom_draw"
            android:gravity="center"
            android:text="0"
            android:selectAllOnFocus="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tv_img"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.4"
            android:background="@drawable/line_right_bottom_draw"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/img_cq"
            android:layout_weight="0.4"
            android:background="@drawable/line_right_bottom_draw"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@drawable/line_right_bottom_draw"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@drawable/line_right_bottom_draw"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>