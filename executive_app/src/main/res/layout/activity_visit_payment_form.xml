<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lnbinfotech.msplfootwearex.VisitPaymentFormActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/mobmargin5">

                    <EditText
                        android:id="@+id/ed_cus_name"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@drawable/search"
                        android:focusable="false"
                        android:hint="@string/selectcustomername" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView2"
                    style="@style/textViewMob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mobmargin5"
                    android:text="@string/paymenttype"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdo_cash"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:checked="true"
                        android:text="@string/_cash" />

                    <RadioButton
                        android:id="@+id/rdo_cheque"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:checked="false"
                        android:text="@string/cheque" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView1"
                    style="@style/textViewMob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mobmargin5"
                    android:text="@string/enteramount"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/ed_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cheque_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <LinearLayout
                        android:id="@+id/chqbtn_det_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_button_background"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <ImageView
                                android:id="@+id/imageView_cheque"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4sp"
                                android:src="@drawable/cheque_" />

                            <TextView
                                android:id="@+id/tv_cheque_details"
                                style="@style/textViewMob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/enterchequedetails"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_more_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_add_more"
                            style="@style/textViewMob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/addmore"
                            android:textColor="@color/orange" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!--<android.support.v7.widget.AppCompatButton

            app:backgroundTint="@color/lightpeach"
            android:drawableLeft="@drawable/cheque_button_back"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enterchequedetails"
            android:id="@+id/btn_cheque_details"
            android:layout_weight="0.19" />-->

        <LinearLayout
            android:id="@+id/list_lay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightpurple"
                android:orientation="horizontal"
                android:padding="5sp">

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="left"
                    android:text="@string/date"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="left"
                    android:text="@string/number"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text="@string/amt"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text="@string/againstref"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ListView
                android:id="@+id/lv_show_chq_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="visible">

            </ListView>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/save_button_back"
            android:text="@string/save"
            android:textColor="@color/white"
            app:backgroundTint="@color/orange" />

    </LinearLayout>
        </LinearLayout>
    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>