<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/card_take_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin2"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/black"
                android:elevation="5dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:background="@color/red"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imgv_takeorder"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/order_64" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_take_order"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/mobmargin5"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Take Order"
                        android:textColor="@color/red"
                        android:textSize="20dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
            android:id="@+id/card_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mobmargin2"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/black"
            android:elevation="5dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@color/lightpurple"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imgv_payment"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/payment_64" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_payment"
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/mobmargin5"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Payment"
                    android:textColor="@color/lightpurple"
                    android:textSize="20dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_ledger_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin2"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/black"
                android:elevation="5dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:background="@color/peachpink"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imgv_ledger_report"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/ledger_report_64" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_ledger_report"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/mobmargin5"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Ledger Report"
                        android:textColor="@color/peachpink"
                        android:textSize="20dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_feedbak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mobmargin2"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/black"
        android:elevation="5dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@color/blue"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imgv_feedbak"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/feedback_64" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_feedbak"
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/mobmargin5"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Feedbak"
                android:textColor="@color/blue"
                android:textSize="20dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
    </ScrollView>
</LinearLayout>