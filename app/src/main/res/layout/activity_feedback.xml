<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lnbinfotech.msplfootwear.FeedbackActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/border_draw_profile"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fedback_spinner" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.04">

            <EditText
                style="@style/textViewMob"
                android:gravity="top|center"
                android:background="@drawable/border_draw_profile"
                android:paddingLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="@string/enterdescription"
                android:id="@+id/ed_description" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgv_attach_img"
                android:src="@drawable/camera"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04">

            <Button
                style="@style/btnStyleMobWcurve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sendfed"
                android:id="@+id/bt_send" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
