<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.lnbinfotech.msplfootwear.FeedbackActivity"
    android:orientation="vertical">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scroll_lay"
        android:layout_margin="5sp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedbacktype" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border_draw_profile">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/fedback_spinner" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_draw_profile"
                android:visibility="visible"
                android:layout_marginTop="2sp"
                android:padding="5sp"
                android:id="@+id/packing_order_inv_lay">

                <AutoCompleteTextView
                    style="@style/textViewMob"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="@string/entertexthere"
                    android:inputType="textCapWords"
                    android:id="@+id/auto_" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/damaged_goods_cardlay"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_draw_profile"
                    android:layout_marginTop="2sp"
                    android:visibility="visible"
                    android:id="@+id/damaged_goods_lay">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:text="@string/article_no"
                            android:layout_weight="0.7" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ed_article_no"
                            android:layout_weight="0.3" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/textViewMob"
                            android:paddingLeft="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/invoice_no"
                            android:layout_weight="0.7" />

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/auto_invoice_no"
                            android:layout_weight="0.3" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/textViewMob"
                            android:paddingLeft="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_qty"
                            android:layout_weight="0.7" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/service_or_team_cardlay"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_draw_profile"
                    android:layout_marginTop="2sp"

                    android:id="@+id/service_or_team_lay"
                    android:visibility="visible">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/salesman"
                            android:paddingLeft="4dp"
                            android:layout_weight="0.7" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:id="@+id/ed_salesman" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/textViewMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/frontoffice"
                            android:paddingLeft="4dp"
                            android:layout_weight="0.7" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:id="@+id/ed_frontoffice" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/textViewMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <EditText
                    style="@style/textViewMob"
                    android:gravity="top"
                    android:ems="10"
                    android:lines="5"
                    android:padding="5sp"
                    android:background="@drawable/border_draw_profile"
                    android:paddingLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enterdescription"
                    android:id="@+id/ed_description"
                    android:visibility="visible" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgv_camera"
                            android:layout_weight="0.90"
                            android:src="@drawable/camera_p" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:layout_gravity="center"
                            android:text="@string/attach_image"
                            style="@style/textViewMob"
                            android:layout_weight="0.10" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/attach_img_lay">

                        <ImageView
                            android:background="@drawable/border_draw_profile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imgv_img1"
                            android:layout_weight="0.3"
                            android:src="@drawable/camera"
                            android:visibility="visible" />
                        <ImageView
                            android:background="@drawable/border_draw_profile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imgv_img2"
                            android:layout_weight="0.3"
                            android:src="@drawable/camera"
                            android:visibility="gone" />
                        <ImageView
                            android:background="@drawable/border_draw_profile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imgv_img3"
                            android:layout_weight="0.3"
                            android:src="@drawable/camera"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="center"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatButton
            app:backgroundTint="@color/red"

            android:drawableLeft="@drawable/btn_img_background"
            style="@style/textViewMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sendfed"
            android:textColor="@color/white"
            android:id="@+id/bt_send" />
    </LinearLayout>

    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
