<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/card_bills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/black"
                android:visibility="gone"
                app:cardBackgroundColor="@color/red">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/mobpadding5">

                    <ImageView
                        android:id="@+id/imgv_bills"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/customer_account_height40"
                        android:layout_gravity="center"
                        android:src="@drawable/order_64" />

                    <TextView
                        android:id="@+id/tv_bills"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="bottom|center"
                        android:text="cc"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_ledger_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/black"
                android:visibility="gone"
                app:cardBackgroundColor="@color/orange">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/mobpadding5">

                    <ImageView
                        android:id="@+id/imgv_ledger_statement"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/customer_account_height40"
                        android:layout_gravity="center"
                        android:src="@drawable/ledger_statement_64" />

                    <TextView
                        android:id="@+id/tv_ledger_statement"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="bottom|center"
                        android:text="ledger_statement"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_ledger"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/black"
                android:visibility="visible"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/account_item_back"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/show_32"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/textViewTab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="center"
                        android:text="Ledger Statement"
                        android:textColor="@color/red_dark" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_out"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/black"
                android:visibility="visible"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/out_back"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/order_32" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/textViewTab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="center"
                        android:text="Outstanding Bills"
                        android:textColor="@color/greend" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_gst"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/black"
                android:visibility="visible"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gst_back"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/gst_report_32" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/textViewTab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="center"
                        android:text="GST Report"
                        android:textColor="@color/purpled" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_gst_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/black"
                android:visibility="gone"
                app:cardBackgroundColor="@color/peachpink">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/mobpadding5">

                    <ImageView
                        android:id="@+id/imgv_gst_report"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/customer_account_height40"
                        android:layout_gravity="center"
                        android:src="@drawable/gst_report_64" />

                    <TextView
                        android:id="@+id/tv_gst_report"
                        style="@style/textViewMob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/mobmargin5"
                        android:gravity="bottom|center"
                        android:text="Gst Report"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


</LinearLayout>
        </ScrollView>
    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>