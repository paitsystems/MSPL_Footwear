<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_give_order"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:divider="@android:color/black"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardBackgroundColor="@color/red"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/mobpadding5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/order_64"
                android:id="@+id/imgv_giveorder"
                android:layout_gravity="center" />

        <TextView
            android:textSize="20dp"
            style="@style/textViewMob"
            android:textColor="@color/white"
            android:gravity="bottom|center"
            android:id="@+id/tv_give_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mobmargin5"
            android:text="Give Order"
            android:layout_gravity="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_account"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardBackgroundColor="@color/yellogreen"
         android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/mobpadding5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/account_64"
                android:id="@+id/imgv_account"
                android:layout_gravity="center" />

            <TextView
                android:textSize="20dp"
                style="@style/textViewMob"
                android:textColor="@color/white"
                android:gravity="bottom|center"
                android:id="@+id/tv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin5"
                android:text="Account"
                android:layout_gravity="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_track_order"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardBackgroundColor="@color/peachpink"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/mobpadding5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/track_order_64"
                android:id="@+id/imgv_trackorder"
                android:layout_gravity="center" />

            <TextView
                android:textSize="20dp"
                style="@style/textViewMob"
                android:textColor="@color/white"
                android:gravity="bottom|center"
                android:id="@+id/tv_track_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin5"
                android:text="Track_Order"
                android:layout_gravity="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_profile"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardBackgroundColor="@color/lightpurple"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/mobpadding5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/profile_64"
                android:id="@+id/imgv_profile"
                android:layout_gravity="center" />

            <TextView
                android:textSize="20dp"
                style="@style/textViewMob"
                android:textColor="@color/white"
                android:gravity="bottom|center"
                android:id="@+id/tv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin5"
                android:text="Profile"
                android:layout_gravity="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_scheme"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardBackgroundColor="@color/orange"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/mobpadding5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/scheme_64"
                android:id="@+id/imgv_scheme"
                android:layout_gravity="center" />

            <TextView
                android:textSize="20dp"
                style="@style/textViewMob"
                android:textColor="@color/white"
                android:gravity="bottom|center"
                android:id="@+id/tv_scheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin5"
                android:text="Scheme"
                android:layout_gravity="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_whatsnew"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardBackgroundColor="@color/lightgreen"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/mobpadding5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/new_64"
                android:id="@+id/imgv_wharsnew"
                android:layout_gravity="center" />

            <TextView
                android:textSize="20dp"
                style="@style/textViewMob"
                android:textColor="@color/white"
                android:gravity="bottom|center"
                android:id="@+id/tv_whatsnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin5"
                android:text="What's New"
                android:layout_gravity="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_feedback"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardBackgroundColor="@color/blue"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/mobpadding5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/feedback_64"
                android:id="@+id/imgv_feedback"
                android:layout_gravity="center" />

            <TextView
                android:textSize="20dp"
                style="@style/textViewMob"
                android:textColor="@color/white"
                android:gravity="bottom|center"
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mobmargin5"
                android:text="Feedback"
                android:layout_gravity="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>