<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_gents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mobmargin5"
        android:text="Gents" />

    <Button
        android:id="@+id/btn_ladiesnboys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mobmargin5"
        android:text="Ladies And Boys" />

    <Button
        android:id="@+id/btn_hawaineva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mobmargin5"
        android:text="Hawai And Eva" />

    <Button
        android:id="@+id/btn_schoolshoe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mobmargin5"
        android:text="School Shoes" />

</LinearLayout>